<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
                    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
                    xmlns:models="using:HiChatto.Models"
                    xmlns:local="using:HiChatto.Universal">
    <Style x:Key="TextBlockLargeFontSize" TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="24" />
    </Style>
    <Style x:Key="TextBoxLargeFontSize"
           TargetType="TextBox">
        <Setter Property="FontSize"
                Value="24" />
    </Style>
    <Style x:Key="PrimaryLargeButtonStyle"
           TargetType="Button">
        <Setter Property="Background"
                Value="#2196F3" />
        <Setter Property="Foreground"
                Value="White" />
        <Setter Property="Padding"
                Value="8,4,8,4" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="FontFamily"
                Value="{ThemeResource ContentControlThemeFontFamily}" />
        <Setter Property="FontWeight"
                Value="Normal" />
        <Setter Property="FontSize"
                Value="36" />
        <Setter Property="UseSystemFocusVisuals"
                Value="True" />
        <Setter Property="FocusVisualMargin"
                Value="-3" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="15"
                            BorderThickness="1"
                            x:Name="RootButton"
                            Padding="0">
                        <Border.Background>
                            <SolidColorBrush x:Name="BorderBrush"
                                             Color="#2196F3" />
                        </Border.Background>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <Storyboard>
                                        <PointerUpThemeAnimation Storyboard.TargetName="RootButton" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="Color"
                                                        To="#1565C0"
                                                        Duration="0"
                                                        Storyboard.TargetName="BorderBrush" />
                                        <PointerUpThemeAnimation Storyboard.TargetName="RootButton" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="Color"
                                                        To="#1565C0"
                                                        Duration="0"
                                                        Storyboard.TargetName="BorderBrush" />
                                        <PointerUpThemeAnimation Storyboard.TargetName="RootButton" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="Color"
                                                        Duration="0"
                                                        To="#BBDEFB"
                                                        Storyboard.TargetName="BorderBrush" />

                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <ContentPresenter x:Name="ContentPresenter"
                                          AutomationProperties.AccessibilityView="Raw"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          ContentTransitions="{TemplateBinding ContentTransitions}"
                                          Content="{TemplateBinding Content}"
                                          HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          Padding="{TemplateBinding Padding}"
                                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Name="ImageMessage"
           TargetType="ListView">
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate x:DataType="models:MessageInfo">
                    <Image MaxHeight="300"
                           MaxWidth="300"
                           Source="{Binding Content}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Name="TextMessage"
           TargetType="ListView">
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate x:DataType="models:MessageInfo">
                    <TextBlock Text="{Binding Content}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
